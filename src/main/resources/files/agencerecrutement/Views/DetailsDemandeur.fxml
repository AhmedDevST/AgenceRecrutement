<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import java.net.URL?>

<AnchorPane prefHeight="570.0" prefWidth="860.0"  xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            styleClass="backgroundImageEst"
            fx:controller="files.agencerecrutement.Controller.DetailsDemandeur" >
    <stylesheets>
        <URL value="@../Styles/Style1.css" />
    </stylesheets>
    <GridPane vgap="10" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <rowConstraints>
            <RowConstraints prefHeight="70" vgrow="NEVER" />
            <RowConstraints vgrow="ALWAYS" />
            <RowConstraints prefHeight="30" vgrow="NEVER" />
        </rowConstraints>
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>
        <!-- header -->
        <BorderPane GridPane.rowIndex="0">
            <center>
                <Label styleClass="labelTitre" text="Details Demandeur" BorderPane.alignment="CENTER">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor></Label>
            </center>
        </BorderPane>
        <!-- main -->
        <GridPane hgap="10" styleClass="backgroundWhitTransparant" vgap="10" GridPane.rowIndex="1">
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="ALWAYS" />
                <RowConstraints vgrow="ALWAYS" />
                <RowConstraints vgrow="ALWAYS" />
                <RowConstraints vgrow="ALWAYS" />
                <RowConstraints vgrow="ALWAYS" />
                <RowConstraints vgrow="ALWAYS" />
            </rowConstraints>

            <!-- Nom -->
            <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <Label styleClass="labelForm" text="Nom" />
                <TextField fx:id="Nom" editable="false" prefHeight="35"  styleClass="textFieldForm" />
            </VBox>
            <!-- Prenom -->
            <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <Label styleClass="labelForm" text="Prenom" />
                <TextField fx:id="Prenom" editable="false" prefHeight="35"  styleClass="textFieldForm" />
            </VBox>
            <!-- Adresse -->
            <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <Label styleClass="labelForm" text="Adresse" />
                <TextField fx:id="Adresse" editable="false" prefHeight="35"  styleClass="textFieldForm" />
            </VBox>
            <!-- Téléphone -->
            <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <Label styleClass="labelForm" text="Téléphone" />
                <TextField fx:id="Telephone" editable="false" prefHeight="35"  styleClass="textFieldForm" />
            </VBox>
            <!-- Phone -->
            <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="2">
                <Label styleClass="labelForm" text="Fax " />
                <TextField fx:id="Fax" editable="false" prefHeight="35" styleClass="textFieldForm" />
            </VBox>
            <!-- Diplome -->
            <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="2">
                <Label styleClass="labelForm" text="Diplome" />
                <TextField fx:id="Diplome" prefHeight="35" editable="false"  styleClass="textFieldForm" />
            </VBox>
            <!-- Nombre  Années Experiences -->
            <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="3">
                <Label styleClass="labelForm" text="Années Experiences" />
                <TextField fx:id="NbExper" editable="false" prefHeight="35"  styleClass="textFieldForm" />
            </VBox>
            <!-- salaire-->
            <VBox spacing="5" GridPane.rowIndex="3" GridPane.columnIndex="1">
                <Label styleClass="labelForm" text="Salaire " />
                <TextField fx:id="Salaire" editable="false" prefHeight="35" styleClass="textFieldForm" />
            </VBox>
            <!-- username -->
            <VBox spacing="5" fx:id="VboxUsername" GridPane.rowIndex="4" GridPane.columnIndex="0">
                <Label styleClass="labelForm" text="Username:" />
                <TextField fx:id="UsernameTxt" editable="false"  prefHeight="35"  styleClass="textFieldForm" />
            </VBox>
            <!-- mot de passe -->
            <VBox spacing="5" fx:id="VboxPassword"   GridPane.rowIndex="4" GridPane.columnIndex="1">
                <Label styleClass="labelForm" text="mot de passe:" />
                <TextField fx:id="PasswordTxt" editable="false" prefHeight="35" styleClass="textFieldForm" />
            </VBox>
            <!-- nombre de postulation -->
            <VBox spacing="5" fx:id="VboxNbPostulation"  GridPane.rowIndex="5" GridPane.columnIndex="0">
                <Label styleClass="labelForm" text="nombre de postulation:" />
                <TextField fx:id="nbPostulationTxt" editable="false"  prefHeight="35"   styleClass="textFieldForm" />
            </VBox>
            <!-- nombre de recrutement -->
            <VBox spacing="5"  fx:id="VboxRecrutement"  GridPane.rowIndex="5" GridPane.columnIndex="1">
                <Label styleClass="labelForm" text="nombre de recrutement" />
                <TextField fx:id="nbRecrutementTxt" prefHeight="35" editable="false" styleClass="textFieldForm" />
            </VBox>
            <padding>
                <Insets bottom="10" left="10.0" right="10.0" top="10" />
            </padding>
        </GridPane>
        <!-- footer -->
    </GridPane>
    <padding>
        <Insets bottom="20" left="20.0" right="20.0" top="20" />
    </padding>
</AnchorPane>