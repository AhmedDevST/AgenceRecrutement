<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="800.0" spacing="20.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="files.agencerecrutement.Controller.LoginController">
    <stylesheets>
        <URL value="@../Styles/Style1.css" />
    </stylesheets>
    <GridPane VBox.vgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="NEVER" prefHeight="40" />
            <RowConstraints vgrow="ALWAYS" />
        </rowConstraints>
        <!-- hrader -->
        <GridPane GridPane.rowIndex="0" >
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="ALWAYS" />
            </rowConstraints>
            <HBox GridPane.columnIndex="0" alignment="CENTER_LEFT">
                <Label text="JobLink Press" styleClass="labelLogoLogin"/>
            </HBox>
                <!-- imnage close -->
            <HBox alignment="CENTER_RIGHT" GridPane.columnIndex="1">
                <ImageView fitHeight="25.0" fitWidth="45.0" onMouseClicked="#CloseApp" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../Images/close_img.png" />
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </ImageView>
            </HBox>
        </GridPane>

        <GridPane  GridPane.rowIndex="1">
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="ALWAYS" />
            </rowConstraints>
            <!-- image -->
            <VBox alignment="CENTER"  GridPane.columnIndex="0">
                <ImageView fitHeight="400" fitWidth="400" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../Images/imgaeLogin2.png" />
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </ImageView>
            </VBox>
            <!-- login -->
            <!-- inputs button -->
            <VBox spacing="35" GridPane.columnIndex="1">
                <HBox alignment="CENTER_LEFT">
                    <Label styleClass="labelStyleLogin" text="Se Connecter" />
                </HBox>
                <!--   text filed email  -->
                <VBox spacing="10">
                    <Label alignment="CENTER_LEFT" styleClass="labelFormLogin" text="Email :" />
                    <TextField fx:id="emailTxt" prefHeight="38.0" promptText="Enter ici votre email address " styleClass="textfieldLogin" />
                </VBox>
                <!--   text filed password  -->
                <VBox spacing="10">
                    <Label alignment="CENTER_LEFT" styleClass="labelFormLogin" text="Mot de passe :" />
                    <PasswordField fx:id="passwordTxt" prefHeight="38.0" promptText="Enter ici votre mot de passe " styleClass="textfieldLogin" />
                </VBox>
                <!-- button -->
                <HBox alignment="CENTER_LEFT">
                    <Button fx:id="loginButton" alignment="CENTER" onAction="#loginEvent" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="45.0" prefWidth="180.0" styleClass="login-button" text="Connexion">
               </Button>
                </HBox>
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            </VBox>
             <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
             </padding>
        </GridPane>
    </GridPane>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
