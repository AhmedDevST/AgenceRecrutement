<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="900.0" styleClass="backgroundImageEst" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="files.agencerecrutement.Controller.RecrutementController">
    <stylesheets>
        <URL value="@style.css" />
        <URL value="@../Styles/Style1.css" />
    </stylesheets>
    <GridPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <rowConstraints>
            <RowConstraints prefHeight="120" vgrow="NEVER" />
            <RowConstraints vgrow="ALWAYS" />
            <RowConstraints prefHeight="10" vgrow="NEVER" />
        </rowConstraints>
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>
        <!-- header -->
        <GridPane GridPane.rowIndex="0">
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="ALWAYS" />
            </rowConstraints>
            <!-- recherche -->
            <HBox alignment="CENTER_LEFT" GridPane.columnIndex="0">
                <TextField fx:id="searchtext" onAction="#searchRecrutement" prefHeight="38" prefWidth="350" promptText="Recherche par Offre" styleClass="textfieldSearch " HBox.hgrow="NEVER" />
                <padding>
                    <Insets bottom="7.0" left="10.0" right="10.0" top="7.0" />
                </padding>
            </HBox>

        </GridPane>
        <!-- main -->
        <StackPane GridPane.rowIndex="1">
            <TableView fx:id="tableRecrutements"   style="-fx-background-color: transparent;" styleClass="table-view">
                <columns>
                    <TableColumn fx:id="colOffre" prefWidth="75.0" text="Offre" />
                    <TableColumn fx:id="colNomEntreprise" prefWidth="75.0" text="Entreprise" />
                    <TableColumn fx:id="colNom" prefWidth="75.0" text="Nom" />
                    <TableColumn fx:id="colPrenom" prefWidth="112.0" text="Prenom" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
            <padding>
                <Insets bottom="8" left="10" right="10" top="8" />
            </padding>
        </StackPane>
    </GridPane>
</AnchorPane>
