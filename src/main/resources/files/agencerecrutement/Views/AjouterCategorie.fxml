<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="files.agencerecrutement.Controller.AjouterCategorieController"
            prefHeight="250.0" prefWidth="600.0"
            style="-fx-background-color: #FFF;">
    <stylesheets>
        <URL value="@../Styles/Style1.css" />
    </stylesheets>
    <GridPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <rowConstraints>
            <RowConstraints prefHeight="70" vgrow="NEVER" />
            <RowConstraints vgrow="ALWAYS" />
            <RowConstraints prefHeight="80" vgrow="NEVER" />
        </rowConstraints>
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>
        <!-- header -->
        <BorderPane GridPane.rowIndex="0">
            <center>
                <Label styleClass="labelTitre" text="Nouvelle Categorie" BorderPane.alignment="CENTER">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor></Label>
            </center>
        </BorderPane>
        <!-- main -->
        <VBox spacing="10" style="-fx-background-color: #FFF;" GridPane.rowIndex="1">
            <!-- Libelle -->
            <VBox spacing="5" GridPane.rowIndex="0">
                <Label styleClass="labelForm" text="Libelle :" />
                <TextField fx:id="LibelleTxt" prefHeight="35" promptText="Entrer ici le Libelle  " styleClass="textFieldForm" />
            </VBox>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
        <!-- footer -->
        <StackPane GridPane.rowIndex="2">
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <!-- annuler button -->
                <Button fx:id="AnnulerCategorieBtn" alignment="CENTER" onAction="#AnnulerCategorieEvent" prefHeight="45" prefWidth="150.0" styleClass="danger-button">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20">
                            <Image url="@../Images/annulerIcon.png" />
                        </ImageView>
                    </graphic>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                    Annuler
                </Button>
                <!-- enregister button -->
                <Button fx:id="SaveCategorieBtn" alignment="CENTER" onAction="#AjouterCategorieEvent" prefHeight="45" prefWidth="150.0" styleClass="primary-button">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20">
                            <Image url="@../Images/saveIcon.png" />
                        </ImageView>
                    </graphic>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                    Enregistrer
                </Button>
            </HBox>
            <padding>
                <Insets left="10" right="10" />
            </padding>
        </StackPane>

    </GridPane>

</AnchorPane>
