<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="files.agencerecrutement.Controller.GestionEntrepriseController">
    <stylesheets>
        <URL value="@../Styles/Style1.css" />
    </stylesheets>
    <GridPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <rowConstraints>
            <RowConstraints prefHeight="120" vgrow="NEVER" />
            <RowConstraints vgrow="ALWAYS" />
            <RowConstraints prefHeight="10" vgrow="NEVER" />
        </rowConstraints>
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>
        <!-- header -->
        <GridPane style="-fx-background-color: #FFF;" GridPane.rowIndex="0">
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="ALWAYS" />
            </rowConstraints>
            <!-- search entreprise -->
            <HBox alignment="CENTER_LEFT" GridPane.columnIndex="0">
                <TextField fx:id="SearchText" onAction="#searchEst" onInputMethodTextChanged="#searchEst" prefHeight="38" prefWidth="350" promptText="Recherche par Raison socila,adresse et Telephone" styleClass="custom-textfield " HBox.hgrow="NEVER" />
                <padding>
                   <Insets bottom="7.0" left="10.0" right="10.0" top="7.0" />
                </padding>
            </HBox>
            <!-- nouvelle entreprise -->
            <HBox alignment="CENTER_RIGHT" GridPane.columnIndex="1">
                <Button fx:id="AjouterEntrepiseBtn" alignment="CENTER" prefHeight="45" prefWidth="200.0"
                        styleClass="primary-button">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20">
                            <Image url="@../Images/AddIcon.png"/>
                        </ImageView>
                    </graphic>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                    Nouvelle Entreprise
                </Button>
                <padding>
                   <Insets bottom="7.0" left="7.0" right="7.0" top="7.0" />
                </padding>
            </HBox>
            <padding>
                <Insets bottom="8" left="10" right="10" top="8" />
            </padding>
        </GridPane>
        <!-- main -->
        <StackPane GridPane.rowIndex="1">
            <TableView fx:id="DataEntreprises" styleClass="table-view">
                <columns>
                    <TableColumn fx:id="CodeInterne" prefWidth="10" text="Code Interne" />
                    <TableColumn fx:id="RaisonSocialEst" prefWidth="70" text="Raison Social " />
                    <TableColumn fx:id="AdresseEst" prefWidth="70" text="Adresse" />
                    <TableColumn fx:id="phoneEst" prefWidth="50" text="Telephone" />
                    <TableColumn fx:id="ActivitesEst" prefWidth="10" text="Activites" />
                    <TableColumn fx:id="ActionsCol" prefWidth="40" text="Actions" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
            <padding>
                <Insets bottom="8" left="10" right="10" top="8" />
            </padding>
        </StackPane>
        <!-- footer -->
    </GridPane>
</AnchorPane>
